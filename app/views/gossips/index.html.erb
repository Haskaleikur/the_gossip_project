<div class="jumbotron jumbotron-fluid jumbotron-hero">
  <div class="text-center">
  <br>
  <br>
  <h1>Hello <%= User.find_by(id: session[:user_id]).first_name %> !<h1>
    <h5><i>What'up today ?</i></h5>
  <br>
  <a href="<%= new_gossip_path %>" class="btn btn-1 btn-lg rounded-pill">New Gossip</a>
  </div>
  <br>
  <br>
  <div class='container'>
    <div class="card-columns">
    <% @gossips.each do |un_gossip| %>
    <div class="card">
      <div class="card-body">
      <div class="d-flex justify-content-between">
        <h4 class="card-title"><%= un_gossip.user.first_name %> <%= un_gossip.user.last_name %></h4>
        <a href= "<%=author_path(:id => un_gossip.user_id) %>" title="Profile Author" class="btn btn-outline btn-sm ">Profile</a>
      </div>
        <p class="card-text"><p><%= un_gossip.title %> </p></p><p><%= un_gossip.content %></p>
        <p>
          <a href="<%= gossip_path(un_gossip.id) %>" class="btn btn-outline btn-3 rounded-pill">Read more</a>
          <% unless session[:user_id] != un_gossip.user_id %>
          <a href="<%= edit_gossip_path(un_gossip.id) %>" class="btn btn-2 rounded-pill">Edit</a>
          <a href="<%= gossip_path(un_gossip.id) %>" class="btn btn-4 rounded-pill" data-confirm="Do you want to delete?" data-method="DELETE" >Delete</a>
          <% end %>
        </p>
      </div>
    </div>
    <% end %>
    </div>
  </div>
</div>



